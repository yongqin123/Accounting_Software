<Page x:Class="AccountingSoftware.View.EditAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSoftware.View"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="EditAccount">
    <Grid Name="edit">

        <StackPanel Name="stack" Width="400px" Margin="200,20,200,29" >
            <Image Source="/Images/logo.png" Height="100" Width="100" Margin="0,40,0,0"/>
            <TextBlock Name="editAccount" Text="Edit Account" HorizontalAlignment="Center" FontSize="30"  FontWeight="Bold" Margin="0,50,0,0" Foreground="White" />
            <TextBlock Name="accountNameLabel" Text="ACCOUNT NAME" HorizontalAlignment="Left" FontSize="10" Margin="40,100,0,0"  FontWeight="Bold" />
            <TextBox Name="name" Width="300" BorderThickness="0,0,0,1" Background="Transparent" BorderBrush="Aqua" FontSize="30" Foreground="white"/>
            <TextBlock Name="typeLabel" Text="ACCOUNT TYPE" HorizontalAlignment="Left" FontSize="10" Margin="40,100,0,0"  FontWeight="Bold" />
            <ComboBox Name="type" Width="300" BorderThickness="0,0,0,1" Background="Transparent" BorderBrush="Aqua" FontSize="30" Foreground="white"/>

            <Button Width="80" Height="30" BorderBrush="Aqua" Content="Submit" Foreground="Aqua" Background="Transparent" Margin="0,50,0,0" Click="submit_Click" />
        </StackPanel>


    </Grid>
    
</Page>
