<Page x:Class="AccountingSoftware.View.SFP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingSoftware.View"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1000"
      Title="SFP">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Name="title" HorizontalAlignment="Left" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,60,0,0" Grid.Row="0" Grid.Column="0" Name="assetAccount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Asset:" FontSize="30"/>
                    </StackPanel>
                    <StackPanel Margin="0,60,0,0" Grid.Row="0" Grid.Column="1" Name="assetAmount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Amount($):" FontSize="30"/>
                    </StackPanel>
                    <StackPanel Margin="0,60,0,0" Grid.Row="1" Grid.Column="0"  Name="liabilityAccount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Liability:" FontSize="30"/>
                    </StackPanel>
                    <StackPanel Margin="0,60,0,0" Grid.Row="1" Grid.Column="1" Name="liabilityAmount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Amount($):" FontSize="30"/>
                    </StackPanel>
                    <StackPanel Margin="0,60,0,0" Grid.Row="2" Grid.Column="0"  Name="equityAccount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Owner's Equity:" FontSize="30"/>
                    </StackPanel>
                    <StackPanel Margin="0,60,0,0" Grid.Row="2" Grid.Column="1" Name="equityAmount" Width="400" HorizontalAlignment="Left">
                        <TextBlock Text="Amount($):" FontSize="30"/>
                    </StackPanel>
                    <Button Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80" Height="80" Content="BACK" Name="home" Click="home_Click" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
